        "args": [
          {
            "type": "autocomplete",
            "name": "speed",
            "title": "Скорость"
          },
          {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select",
              "ru": "Выберите"
            },
            "filter": "driver_id=thermostat"
          }
